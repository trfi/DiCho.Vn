type User {
    id: ID! @id
    phone: String! @unique
    password: String!
    phoneVerified: Boolean @default(value: false)
    email: String @unique
    emailVerified: Boolean
    name: String
    username: String
    avatar: String
    gender: Gender
    birthday: DateTime
    address: String
    role: Role
    posts: [Int]!
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
}
type Post {
    id: ID! @id
    title: String!
    thumbnail: String!
    address: String!
    category: Int!
    params: Params
}
type PostDetail @embedded {
    id: ID! @id
    images: [String!]
    content: String!
}
type Params {
    acreage: Int
}
type Category {
    id: Int!
    title: String!
    slug: String!
    subCategory: [SubCategory!]
}
type SubCategory @embedded  {
    id: Int!
    title: String!
    slug: String!
    parent: String!
}
enum Types {
    B
    S
    R
    L
}
enum Gender {
    M
    F
    O
}
enum Role {
    ADMIN
    MODERATOR
}