model Category {
  id       String   @id
  posts    Post[]
  title    String
  slug     String
  path     String?
  parent   String?
  children Json?
  type     String?
  created  DateTime @default(now())
  updated  DateTime @updatedAt
}

enum PostDetail {
  images
  content
  address
}

enum Params {
  acreage
  rooms
}

enum Type {
  S
  T
  B
  R
}

enum Gender {
  M
  F
  O
}

enum Role {
  ADMIN
  MODERATOR
  USER
}
